{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "MutualCredit",
  "origin": "genesis",
  "contract_version": "5.0.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "credit-no-self-credit",
      "expression": "creditor_id != debtor_id",
      "severity": "error",
      "message": "creditor_id and debtor_id must be different (self-credit not allowed)",
      "fields": [
        "creditor_id",
        "debtor_id"
      ],
      "type_signature": {
        "creditor_id": "string",
        "debtor_id": "string"
      }
    },
    {
      "id": "credit-settled-requires-settled_at",
      "expression": "settled == true => settled_at != null",
      "severity": "error",
      "message": "settled_at is required when settled is true",
      "fields": [
        "settled",
        "settled_at"
      ],
      "type_signature": {
        "settled": "boolean",
        "settled_at": "string"
      }
    },
    {
      "id": "credit-settled-requires-settlement",
      "expression": "settled == true => settlement != null",
      "severity": "error",
      "message": "settlement is required when settled is true",
      "fields": [
        "settled",
        "settlement"
      ],
      "type_signature": {
        "settled": "boolean",
        "settlement": "object"
      }
    },
    {
      "id": "credit-unsettled-no-settled_at",
      "expression": "settled == false => settled_at == null",
      "severity": "error",
      "message": "settled_at must not be present when settled is false",
      "fields": [
        "settled",
        "settled_at"
      ],
      "type_signature": {
        "settled": "boolean",
        "settled_at": "string"
      }
    },
    {
      "id": "credit-settled-after-issued",
      "expression": "settled_at != null && issued_at != null => settled_at >= issued_at",
      "severity": "error",
      "message": "settled_at must be >= issued_at",
      "fields": [
        "settled_at",
        "issued_at"
      ],
      "type_signature": {
        "settled_at": "string",
        "issued_at": "string"
      }
    }
  ]
}
