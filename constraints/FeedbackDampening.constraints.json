{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "FeedbackDampeningConfig",
  "origin": "genesis",
  "contract_version": "8.3.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "dampening-alpha-range",
      "expression": "alpha_min <= alpha_max",
      "severity": "error",
      "message": "alpha_min must not exceed alpha_max (ensures valid ramp direction)",
      "fields": ["alpha_min", "alpha_max"],
      "type_signature": {
        "alpha_min": "number",
        "alpha_max": "number"
      }
    },
    {
      "id": "dampening-ramp-positive",
      "expression": "ramp_samples >= 1",
      "severity": "error",
      "message": "ramp_samples must be at least 1 (denominator in alpha ramp)",
      "fields": ["ramp_samples"],
      "type_signature": {
        "ramp_samples": "number"
      }
    }
  ]
}
