{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "ReputationStateChangedPayload",
  "origin": "genesis",
  "contract_version": "7.1.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "reputation-state-changed-valid-transition",
      "expression": "from_state != to_state || to_state == 'cold'",
      "severity": "error",
      "message": "State transition must change state (except reset to cold)",
      "fields": [
        "from_state",
        "to_state"
      ],
      "type_signature": {
        "from_state": "string",
        "to_state": "string"
      }
    },
    {
      "id": "reputation-state-changed-score-range",
      "expression": "blended_score >= 0 && blended_score <= 1",
      "severity": "error",
      "message": "blended_score must be in [0, 1]",
      "fields": [
        "blended_score"
      ],
      "type_signature": {
        "blended_score": "number"
      }
    }
  ]
}
