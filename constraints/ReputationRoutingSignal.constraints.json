{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "ReputationRoutingSignal",
  "origin": "genesis",
  "description": "Constraints for reputation-based routing signals.",
  "contract_version": "7.6.0",
  "constraints": [
    {
      "id": "routing-score-consistency",
      "expression": "qualifying_score >= 0 && qualifying_score <= 1",
      "severity": "error",
      "fields": [
        "qualifying_score"
      ],
      "type_signature": {
        "qualifying_score": "number"
      },
      "message": "qualifying_score must be between 0 and 1 inclusive."
    },
    {
      "id": "routing-expiry-after-effective",
      "expression": "expires_at == undefined || is_after(expires_at, effective_at)",
      "severity": "error",
      "fields": [
        "effective_at",
        "expires_at"
      ],
      "type_signature": {
        "effective_at": "string",
        "expires_at": "string | undefined"
      },
      "message": "expires_at must be after effective_at when both are present."
    }
  ]
}
