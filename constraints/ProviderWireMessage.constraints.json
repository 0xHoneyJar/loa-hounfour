{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "ProviderWireMessage",
  "contract_version": "5.0.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "wire-message-tool-role-requires-tool_call_id",
      "expression": "role != 'tool' || tool_call_id != null",
      "severity": "error",
      "message": "tool_call_id is required when role is 'tool'",
      "fields": ["role", "tool_call_id"]
    },
    {
      "id": "wire-message-content-presence",
      "expression": "content != null || tool_calls != null",
      "severity": "error",
      "message": "Message must have either content or tool_calls",
      "fields": ["content", "tool_calls"]
    }
  ]
}
