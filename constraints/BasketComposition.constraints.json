{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "BasketComposition",
  "origin": "genesis",
  "constraints": [
    {
      "id": "basket-entries-nonempty",
      "expression": "len(entries) >= 1",
      "severity": "error",
      "type_signature": {
        "entries": "array"
      },
      "fields": [
        "entries"
      ],
      "message": "Basket must contain at least one model entry."
    },
    {
      "id": "basket-weights-sum-valid",
      "expression": "basket_weights_normalized(this)",
      "severity": "error",
      "type_signature": {
        "entries": "array"
      },
      "fields": [
        "entries"
      ],
      "message": "Sum of entry weights must be approximately 1.0 (within 0.001 tolerance)."
    }
  ]
}
