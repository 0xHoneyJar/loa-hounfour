{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "ConstraintLifecycleEvent",
  "origin": "genesis",
  "contract_version": "7.6.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "lifecycle-valid-transition",
      "expression": "from_status != to_status",
      "severity": "error",
      "fields": [
        "from_status",
        "to_status"
      ],
      "type_signature": {
        "from_status": "string",
        "to_status": "string"
      },
      "message": "from_status \u2192 to_status must follow CONSTRAINT_LIFECYCLE_TRANSITIONS."
    },
    {
      "id": "lifecycle-enacted-needs-proposal",
      "expression": "to_status != 'enacted' || proposal_id != null",
      "severity": "error",
      "fields": [
        "to_status",
        "proposal_id"
      ],
      "type_signature": {
        "to_status": "string",
        "proposal_id": "string"
      },
      "message": "Transition to enacted status requires a valid proposal_id."
    }
  ]
}
