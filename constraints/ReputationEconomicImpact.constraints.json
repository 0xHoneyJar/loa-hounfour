{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "ReputationEconomicImpact",
  "origin": "genesis",
  "constraints": [
    {
      "id": "impact-has-trigger",
      "expression": "len(trigger_event.event_type) >= 1",
      "severity": "error",
      "type_signature": {
        "trigger_event.event_type": "string"
      },
      "fields": [
        "trigger_event.event_type"
      ],
      "message": "Trigger event must have a non-empty event_type."
    },
    {
      "id": "impact-impacts-nonempty",
      "expression": "len(impacts) >= 1",
      "severity": "error",
      "type_signature": {
        "impacts": "array"
      },
      "fields": [
        "impacts"
      ],
      "message": "Impacts array must have at least one entry."
    }
  ]
}
