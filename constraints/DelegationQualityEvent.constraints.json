{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "DelegationQualityEvent",
  "origin": "genesis",
  "contract_version": "7.5.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "delegation-quality-score-range",
      "expression": "is_between(quality_score, 0, 1)",
      "severity": "error",
      "fields": [
        "quality_score"
      ],
      "type_signature": {
        "quality_score": "number"
      },
      "message": "quality_score must be in [0, 1]."
    },
    {
      "id": "delegation-quality-signal-score-consistency",
      "expression": "quality_signal != null",
      "severity": "info",
      "fields": [
        "quality_signal"
      ],
      "type_signature": {
        "quality_signal": "string"
      },
      "message": "quality_signal and quality_score should be consistent with QUALITY_SIGNAL_SCORES defaults."
    }
  ]
}
