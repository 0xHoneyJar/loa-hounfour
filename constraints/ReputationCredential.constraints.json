{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "ReputationCredential",
  "contract_version": "7.3.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "credential-source-score-bounds",
      "expression": "source_blended_score >= 0.0 && source_blended_score <= 1.0 && source_collection_score >= 0.0 && source_collection_score <= 1.0",
      "severity": "error",
      "message": "source_blended_score and source_collection_score must be in [0, 1]",
      "fields": ["source_blended_score", "source_collection_score"],
      "type_signature": {
        "source_blended_score": "number",
        "source_collection_score": "number"
      }
    },
    {
      "id": "credential-expiry-after-issuance",
      "expression": "expires_at == undefined || expires_at > issued_at",
      "severity": "error",
      "message": "expires_at must be after issued_at when present",
      "fields": ["expires_at", "issued_at"],
      "type_signature": {
        "expires_at": "string | undefined",
        "issued_at": "string"
      }
    },
    {
      "id": "credential-cold-source-warning",
      "expression": "source_state != 'cold'",
      "severity": "warning",
      "message": "Issuing credentials for cold personalities has limited value â€” the credential carries no meaningful reputation signal",
      "fields": ["source_state"],
      "type_signature": {
        "source_state": "string"
      }
    }
  ]
}
