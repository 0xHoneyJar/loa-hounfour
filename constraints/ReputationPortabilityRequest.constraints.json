{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "ReputationPortabilityRequest",
  "contract_version": "7.5.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "portability-different-collections",
      "description": "Source and target collections must differ",
      "expression": "source_collection_id != target_collection_id",
      "severity": "error",
      "category": "governance",
      "type_signature": {
        "source_collection_id": "string",
        "target_collection_id": "string"
      }
    },
    {
      "id": "portability-expiry-after-request",
      "description": "Expiry timestamp must be after request timestamp",
      "expression": "is_after(expires_at, requested_at)",
      "severity": "error",
      "category": "temporal",
      "type_signature": {
        "expires_at": "string",
        "requested_at": "string"
      }
    }
  ]
}
