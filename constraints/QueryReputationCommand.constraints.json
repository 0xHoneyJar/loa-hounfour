{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "QueryReputationCommand",
  "contract_version": "7.2.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "query-reputation-identity-nonempty",
      "expression": "personality_id != '' && pool_id != ''",
      "severity": "error",
      "message": "personality_id and pool_id must be non-empty",
      "fields": ["personality_id", "pool_id"],
      "type_signature": { "personality_id": "string", "pool_id": "string" }
    },
    {
      "id": "query-reputation-collection-id-nonempty-if-present",
      "expression": "collection_id == undefined || collection_id != ''",
      "severity": "error",
      "message": "collection_id must be non-empty when provided",
      "fields": ["collection_id"],
      "type_signature": { "collection_id": "string" }
    },
    {
      "id": "query-reputation-model-id-nonempty-if-present",
      "expression": "model_id == undefined || model_id != ''",
      "severity": "error",
      "message": "model_id must be non-empty when provided",
      "fields": ["model_id"],
      "type_signature": { "model_id": "string" }
    }
  ]
}
