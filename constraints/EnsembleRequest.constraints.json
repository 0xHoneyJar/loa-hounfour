{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "EnsembleRequest",
  "contract_version": "5.0.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "ensemble-request-consensus-threshold",
      "expression": "strategy != 'consensus' || consensus_threshold != null",
      "severity": "error",
      "message": "consensus_threshold is required when strategy is 'consensus'",
      "fields": ["strategy", "consensus_threshold"]
    },
    {
      "id": "ensemble-request-dialogue-config",
      "expression": "strategy != 'dialogue' || dialogue_config != null",
      "severity": "error",
      "message": "dialogue_config is required when strategy is 'dialogue'",
      "fields": ["strategy", "dialogue_config"]
    }
  ]
}
