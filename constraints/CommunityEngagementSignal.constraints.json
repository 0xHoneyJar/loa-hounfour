{
  "schema_id": "CommunityEngagementSignal",
  "constraints": [
    {
      "id": "engagement-weight-bounded",
      "expression": "weight >= 0 && weight <= 1",
      "description": "Engagement signal weight must be between 0 and 1.",
      "severity": "error",
      "type_signature": {
        "weight": "number"
      },
      "fields": ["weight"]
    },
    {
      "id": "engagement-personality-nonempty",
      "expression": "len(personality_id) >= 1",
      "description": "Engagement signal must reference a non-empty personality_id.",
      "severity": "error",
      "type_signature": {
        "personality_id": "string"
      },
      "fields": ["personality_id"]
    }
  ]
}
