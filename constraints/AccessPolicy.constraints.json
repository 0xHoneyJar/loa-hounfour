{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "AccessPolicy",
  "contract_version": "7.3.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "access-policy-valid",
      "expression": "type != null",
      "severity": "error",
      "message": "AccessPolicy must have a type field",
      "fields": ["type"],
      "type_signature": {
        "type": "string"
      }
    },
    {
      "id": "access-reputation-gated-condition",
      "expression": "type != 'reputation_gated' || min_reputation_score != undefined || min_reputation_state != undefined",
      "severity": "error",
      "message": "reputation_gated type requires at least one of min_reputation_score or min_reputation_state",
      "fields": ["type", "min_reputation_score", "min_reputation_state"],
      "type_signature": {
        "type": "string",
        "min_reputation_score": "number | undefined",
        "min_reputation_state": "string | undefined"
      }
    }
  ]
}
