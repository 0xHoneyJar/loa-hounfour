{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "ConstraintProposal",
  "contract_version": "5.0.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "constraint-proposal-accepted-consensus",
      "expression": "review_status != 'accepted' || consensus_category == 'HIGH_CONSENSUS'",
      "severity": "error",
      "message": "consensus_category must be 'HIGH_CONSENSUS' when review_status is 'accepted'",
      "fields": ["review_status", "consensus_category"]
    }
  ]
}
