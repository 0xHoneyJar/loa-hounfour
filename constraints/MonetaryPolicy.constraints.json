{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "MonetaryPolicy",
  "origin": "genesis",
  "contract_version": "7.0.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "monetary-policy-ceiling-positive",
      "expression": "bigint_gt(conservation_ceiling, 0)",
      "severity": "error",
      "category": "economic",
      "type_signature": {
        "conservation_ceiling": "string"
      },
      "message": "Conservation ceiling must be positive"
    },
    {
      "id": "monetary-policy-collateral-minimum",
      "expression": "collateral_ratio_bps >= 10000",
      "severity": "error",
      "category": "economic",
      "type_signature": {
        "collateral_ratio_bps": "integer"
      },
      "message": "Collateral ratio must be at least 10000 bps (100%)"
    },
    {
      "id": "monetary-policy-coupling-references-both",
      "expression": "coupling_invariant != ''",
      "severity": "error",
      "category": "structural",
      "type_signature": {
        "coupling_invariant": "string"
      },
      "message": "Coupling invariant expression must be non-empty"
    },
    {
      "id": "monetary-policy-has-trigger",
      "expression": "review_trigger != null",
      "severity": "error",
      "category": "structural",
      "type_signature": {
        "review_trigger": "ReviewTrigger"
      },
      "message": "Must have a review trigger configured"
    }
  ]
}
