{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "PolicyVersion",
  "origin": "genesis",
  "description": "Constraints for versioned policy records.",
  "contract_version": "7.6.0",
  "constraints": [
    {
      "id": "policy-version-semver",
      "expression": "matches(version, '^\\d+\\.\\d+\\.\\d+$')",
      "severity": "error",
      "fields": [
        "version"
      ],
      "type_signature": {
        "version": "string"
      },
      "message": "version must match semantic versioning pattern."
    },
    {
      "id": "policy-version-supersedes-different",
      "expression": "supersedes == undefined || supersedes != version_id",
      "severity": "error",
      "fields": [
        "version_id",
        "supersedes"
      ],
      "type_signature": {
        "version_id": "string",
        "supersedes": "string | undefined"
      },
      "message": "supersedes must differ from version_id when present."
    }
  ]
}
