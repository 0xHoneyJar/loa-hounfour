{
  "$schema": "https://loa-hounfour.dev/schemas/constraint-file.json",
  "schema_id": "PortabilityResponse",
  "origin": "genesis",
  "contract_version": "7.5.0",
  "expression_version": "1.0",
  "constraints": [
    {
      "id": "portability-accepted-needs-credential",
      "expression": "decision != 'accepted' || credential_id != null",
      "severity": "error",
      "category": "governance",
      "type_signature": {
        "decision": "string",
        "credential_id": "string"
      },
      "message": "Accepted responses must include a credential_id"
    },
    {
      "id": "portability-rejected-needs-reason",
      "expression": "decision != 'rejected' || rejection_reason != null",
      "severity": "error",
      "category": "governance",
      "type_signature": {
        "decision": "string",
        "rejection_reason": "string"
      },
      "message": "Rejected responses must include a rejection_reason"
    },
    {
      "id": "portability-governance-needs-proposal",
      "expression": "decision != 'pending_governance' || governance_proposal_id != null",
      "severity": "error",
      "category": "governance",
      "type_signature": {
        "decision": "string",
        "governance_proposal_id": "string"
      },
      "message": "Pending governance responses must include a governance_proposal_id"
    }
  ]
}
