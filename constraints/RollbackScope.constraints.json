{
  "$schema": "https://schemas.0xhoneyjar.com/loa-hounfour/constraint-schema",
  "schema_id": "RollbackScope",
  "origin": "genesis",
  "constraints": [
    {
      "id": "rollback-changes-nonempty",
      "expression": "scope.changes_to_rollback.length > 0",
      "severity": "error",
      "type_signature": {
        "scope": "RollbackScope"
      },
      "fields": [
        "changes_to_rollback"
      ],
      "message": "Rollback scope must specify at least one change to roll back."
    },
    {
      "id": "rollback-reason-nonempty",
      "expression": "scope.reason.length > 0",
      "severity": "error",
      "type_signature": {
        "scope": "RollbackScope"
      },
      "fields": [
        "reason"
      ],
      "message": "Rollback reason must be non-empty."
    }
  ]
}
