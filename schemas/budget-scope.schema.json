{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/7.4.0/budget-scope",
  "$comment": "contract_version=7.4.0, min_supported=6.0.0. Financial amounts (limit_micro, spent_micro) use string-encoded BigInt (MicroUSD) to prevent floating-point precision loss. See vocabulary/currency.ts for arithmetic utilities.",
  "additionalProperties": false,
  "x-cross-field-validated": true,
  "type": "object",
  "required": [
    "scope",
    "scope_id",
    "limit_micro",
    "spent_micro",
    "action_on_exceed",
    "contract_version"
  ],
  "properties": {
    "scope": {
      "anyOf": [
        {
          "const": "project",
          "type": "string"
        },
        {
          "const": "sprint",
          "type": "string"
        },
        {
          "const": "phase",
          "type": "string"
        },
        {
          "const": "conversation",
          "type": "string"
        }
      ]
    },
    "scope_id": {
      "minLength": 1,
      "type": "string"
    },
    "limit_micro": {
      "pattern": "^[0-9]+$",
      "description": "Unsigned micro-USD amount as string (1 USD = 1,000,000 micro-USD)",
      "type": "string"
    },
    "spent_micro": {
      "pattern": "^[0-9]+$",
      "description": "Unsigned micro-USD amount as string (1 USD = 1,000,000 micro-USD)",
      "type": "string"
    },
    "action_on_exceed": {
      "anyOf": [
        {
          "const": "block",
          "type": "string"
        },
        {
          "const": "warn",
          "type": "string"
        },
        {
          "const": "downgrade",
          "type": "string"
        }
      ]
    },
    "contract_version": {
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "type": "string"
    },
    "reserved_capacity_bps": {
      "minimum": 0,
      "maximum": 10000,
      "type": "integer"
    },
    "reservation_id": {
      "format": "uuid",
      "type": "string"
    },
    "preference_signal": {
      "additionalProperties": false,
      "type": "object",
      "required": [
        "bid_priority",
        "cost_sensitivity"
      ],
      "properties": {
        "bid_priority": {
          "description": "Priority level for resource allocation",
          "anyOf": [
            {
              "const": "standard",
              "type": "string"
            },
            {
              "const": "elevated",
              "type": "string"
            },
            {
              "const": "critical",
              "type": "string"
            }
          ]
        },
        "preferred_pools": {
          "minItems": 1,
          "description": "Preferred model pools for routing",
          "type": "array",
          "items": {
            "minLength": 1,
            "type": "string"
          }
        },
        "cost_sensitivity": {
          "description": "Agent sensitivity to cost overruns",
          "anyOf": [
            {
              "const": "low",
              "type": "string"
            },
            {
              "const": "medium",
              "type": "string"
            },
            {
              "const": "high",
              "type": "string"
            }
          ]
        }
      }
    }
  }
}
