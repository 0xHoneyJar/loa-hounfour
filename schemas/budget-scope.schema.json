{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/5.0.0/budget-scope",
  "additionalProperties": false,
  "x-cross-field-validated": true,
  "type": "object",
  "required": [
    "scope",
    "scope_id",
    "limit_micro",
    "spent_micro",
    "action_on_exceed",
    "contract_version"
  ],
  "properties": {
    "scope": {
      "anyOf": [
        {
          "const": "project",
          "type": "string"
        },
        {
          "const": "sprint",
          "type": "string"
        },
        {
          "const": "phase",
          "type": "string"
        },
        {
          "const": "conversation",
          "type": "string"
        }
      ]
    },
    "scope_id": {
      "minLength": 1,
      "type": "string"
    },
    "limit_micro": {
      "pattern": "^[0-9]+$",
      "description": "Unsigned micro-USD amount as string (1 USD = 1,000,000 micro-USD)",
      "type": "string"
    },
    "spent_micro": {
      "pattern": "^[0-9]+$",
      "description": "Unsigned micro-USD amount as string (1 USD = 1,000,000 micro-USD)",
      "type": "string"
    },
    "action_on_exceed": {
      "anyOf": [
        {
          "const": "block",
          "type": "string"
        },
        {
          "const": "warn",
          "type": "string"
        },
        {
          "const": "downgrade",
          "type": "string"
        }
      ]
    },
    "contract_version": {
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "type": "string"
    }
  },
  "$comment": "contract_version=5.0.0, min_supported=4.0.0"
}
