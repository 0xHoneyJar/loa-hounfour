{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/8.2.0/dispute-record",
  "description": "Dispute filed against an agent or outcome with evidence and resolution tracking",
  "additionalProperties": false,
  "x-cross-field-validated": true,
  "type": "object",
  "required": [
    "dispute_id",
    "filed_by",
    "filed_against",
    "dispute_type",
    "evidence",
    "filed_at",
    "contract_version"
  ],
  "properties": {
    "dispute_id": {
      "minLength": 1,
      "type": "string"
    },
    "filed_by": {
      "minLength": 1,
      "type": "string"
    },
    "filed_against": {
      "minLength": 1,
      "type": "string"
    },
    "dispute_type": {
      "anyOf": [
        {
          "const": "quality",
          "type": "string"
        },
        {
          "const": "safety",
          "type": "string"
        },
        {
          "const": "billing",
          "type": "string"
        },
        {
          "const": "ownership",
          "type": "string"
        },
        {
          "const": "behavioral",
          "type": "string"
        }
      ]
    },
    "evidence": {
      "minItems": 1,
      "type": "array",
      "items": {
        "additionalProperties": false,
        "type": "object",
        "required": [
          "event_id",
          "description"
        ],
        "properties": {
          "event_id": {
            "minLength": 1,
            "type": "string"
          },
          "description": {
            "minLength": 1,
            "type": "string"
          }
        }
      }
    },
    "filed_at": {
      "format": "date-time",
      "type": "string"
    },
    "resolution": {
      "additionalProperties": false,
      "type": "object",
      "required": [
        "outcome",
        "resolved_at"
      ],
      "properties": {
        "outcome": {
          "anyOf": [
            {
              "const": "upheld",
              "type": "string"
            },
            {
              "const": "dismissed",
              "type": "string"
            },
            {
              "const": "compromised",
              "type": "string"
            }
          ]
        },
        "resolved_at": {
          "format": "date-time",
          "type": "string"
        },
        "sanction_id": {
          "minLength": 1,
          "type": "string"
        },
        "credit_note_id": {
          "minLength": 1,
          "type": "string"
        }
      }
    },
    "contract_version": {
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "type": "string"
    }
  },
  "$comment": "contract_version=8.2.0, min_supported=6.0.0"
}
