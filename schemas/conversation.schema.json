{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/2.2.0/conversation",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "id",
    "nft_id",
    "status",
    "message_count",
    "created_at",
    "updated_at",
    "contract_version"
  ],
  "properties": {
    "id": {
      "minLength": 1,
      "description": "Conversation ID",
      "type": "string"
    },
    "nft_id": {
      "$id": "NftId",
      "pattern": "^eip155:[1-9]\\d*\\/0x[a-fA-F0-9]{40}\\/\\d+$",
      "description": "Canonical NFT identifier: eip155:{chainId}/{collectionAddress}/{tokenId}",
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "status": {
      "$id": "ConversationStatus",
      "anyOf": [
        {
          "const": "active",
          "type": "string"
        },
        {
          "const": "paused",
          "type": "string"
        },
        {
          "const": "sealed",
          "type": "string"
        },
        {
          "const": "archived",
          "type": "string"
        }
      ]
    },
    "sealing_policy": {
      "$id": "ConversationSealingPolicy",
      "additionalProperties": false,
      "$comment": "Cross-field invariant: when encryption_scheme !== \"none\", key_derivation must be non-\"none\" and key_reference must be provided. Enforced by validateSealingPolicy() in TypeScript. Cross-language consumers should implement equivalent validation.",
      "type": "object",
      "required": [
        "encryption_scheme",
        "key_derivation",
        "access_audit",
        "previous_owner_access"
      ],
      "properties": {
        "encryption_scheme": {
          "anyOf": [
            {
              "const": "aes-256-gcm",
              "type": "string"
            },
            {
              "const": "none",
              "type": "string"
            }
          ]
        },
        "key_derivation": {
          "anyOf": [
            {
              "const": "hkdf-sha256",
              "type": "string"
            },
            {
              "const": "none",
              "type": "string"
            }
          ]
        },
        "key_reference": {
          "minLength": 1,
          "type": "string"
        },
        "access_audit": {
          "type": "boolean"
        },
        "previous_owner_access": {
          "deprecated": true,
          "description": "Deprecated in v2.2.0. Will be replaced by a richer access_policy in v3.0.0. Consumers should treat this field as informational only.",
          "anyOf": [
            {
              "const": "none",
              "type": "string"
            },
            {
              "const": "read_only_24h",
              "type": "string"
            }
          ]
        }
      },
      "if": {
        "properties": {
          "encryption_scheme": {
            "not": {
              "const": "none"
            }
          }
        },
        "required": [
          "encryption_scheme"
        ]
      },
      "then": {
        "required": [
          "key_reference"
        ],
        "properties": {
          "key_derivation": {
            "not": {
              "const": "none"
            }
          }
        }
      }
    },
    "message_count": {
      "minimum": 0,
      "type": "integer"
    },
    "created_at": {
      "format": "date-time",
      "type": "string"
    },
    "updated_at": {
      "format": "date-time",
      "type": "string"
    },
    "sealed_at": {
      "format": "date-time",
      "type": "string"
    },
    "sealed_by": {
      "minLength": 1,
      "description": "Transfer ID that caused sealing (causal audit trail)",
      "type": "string"
    },
    "contract_version": {
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "type": "string"
    }
  },
  "$comment": "contract_version=2.2.0, min_supported=2.0.0"
}
