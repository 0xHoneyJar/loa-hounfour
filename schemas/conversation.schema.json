{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/4.4.0/conversation",
  "description": "NFT-owned conversation with sealing policy and access control",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "id",
    "nft_id",
    "status",
    "message_count",
    "created_at",
    "updated_at",
    "contract_version"
  ],
  "properties": {
    "id": {
      "minLength": 1,
      "description": "Conversation ID",
      "type": "string"
    },
    "nft_id": {
      "$id": "NftId",
      "pattern": "^eip155:[1-9]\\d*\\/0x[a-fA-F0-9]{40}\\/\\d+$",
      "description": "Canonical NFT identifier: eip155:{chainId}/{collectionAddress}/{tokenId}",
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "status": {
      "$id": "ConversationStatus",
      "anyOf": [
        {
          "const": "active",
          "type": "string"
        },
        {
          "const": "paused",
          "type": "string"
        },
        {
          "const": "sealed",
          "type": "string"
        },
        {
          "const": "archived",
          "type": "string"
        }
      ]
    },
    "sealing_policy": {
      "$id": "ConversationSealingPolicy",
      "additionalProperties": false,
      "$comment": "Cross-field invariants: (1) When encryption_scheme !== \"none\", key_derivation must be non-\"none\" and key_reference must be provided. (2) When access_policy.type is \"time_limited\", duration_hours must be set. (3) When access_policy.type is \"role_based\", roles must be non-empty. Enforced by validateSealingPolicy() in TypeScript. Cross-language consumers should implement equivalent validation.",
      "type": "object",
      "required": [
        "encryption_scheme",
        "key_derivation",
        "access_audit"
      ],
      "properties": {
        "encryption_scheme": {
          "anyOf": [
            {
              "const": "aes-256-gcm",
              "type": "string"
            },
            {
              "const": "none",
              "type": "string"
            }
          ]
        },
        "key_derivation": {
          "anyOf": [
            {
              "const": "hkdf-sha256",
              "type": "string"
            },
            {
              "const": "none",
              "type": "string"
            }
          ]
        },
        "key_reference": {
          "minLength": 1,
          "type": "string"
        },
        "access_audit": {
          "type": "boolean"
        },
        "access_policy": {
          "$id": "AccessPolicy",
          "additionalProperties": false,
          "$comment": "Cross-field invariants: (1) time_limited requires duration_hours. (2) role_based requires roles array. Enforced by validateAccessPolicy() in TypeScript.",
          "type": "object",
          "required": [
            "type",
            "audit_required",
            "revocable"
          ],
          "properties": {
            "type": {
              "description": "Access type governing previous owner data visibility",
              "anyOf": [
                {
                  "const": "none",
                  "type": "string"
                },
                {
                  "const": "read_only",
                  "type": "string"
                },
                {
                  "const": "time_limited",
                  "type": "string"
                },
                {
                  "const": "role_based",
                  "type": "string"
                }
              ]
            },
            "duration_hours": {
              "minimum": 1,
              "maximum": 8760,
              "description": "Access duration in hours (required for time_limited)",
              "type": "integer"
            },
            "roles": {
              "minItems": 1,
              "description": "Roles granted access (required for role_based). Role names are intentionally unconstrained at the protocol level â€” domain-specific validation (e.g., valid role enums) is the consumer's responsibility.",
              "type": "array",
              "items": {
                "minLength": 1,
                "type": "string"
              }
            },
            "audit_required": {
              "description": "Whether access events must be logged to the audit trail",
              "type": "boolean"
            },
            "revocable": {
              "description": "Whether the new owner can revoke this access policy",
              "type": "boolean"
            }
          }
        }
      },
      "if": {
        "properties": {
          "encryption_scheme": {
            "not": {
              "const": "none"
            }
          }
        },
        "required": [
          "encryption_scheme"
        ]
      },
      "then": {
        "required": [
          "key_reference"
        ],
        "properties": {
          "key_derivation": {
            "not": {
              "const": "none"
            }
          }
        }
      }
    },
    "message_count": {
      "minimum": 0,
      "type": "integer"
    },
    "created_at": {
      "format": "date-time",
      "type": "string"
    },
    "updated_at": {
      "format": "date-time",
      "type": "string"
    },
    "sealed_at": {
      "format": "date-time",
      "type": "string"
    },
    "sealed_by": {
      "minLength": 1,
      "description": "Transfer ID that caused sealing (causal audit trail)",
      "type": "string"
    },
    "contract_version": {
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "type": "string"
    }
  },
  "$comment": "contract_version=4.4.0, min_supported=3.0.0"
}
