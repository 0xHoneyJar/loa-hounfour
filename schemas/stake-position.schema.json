{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/8.0.0/stake-position",
  "$comment": "contract_version=8.0.0, min_supported=6.0.0. Financial amounts (amount_micro, vested_micro, remaining_micro) use string-encoded BigInt (MicroUSD) to prevent floating-point precision loss. See vocabulary/currency.ts for arithmetic utilities.",
  "description": "Staked position representing conviction, delegation, or validation commitment",
  "additionalProperties": false,
  "x-experimental": true,
  "x-cross-field-validated": true,
  "type": "object",
  "required": [
    "stake_id",
    "staker_id",
    "target_id",
    "amount_micro",
    "stake_type",
    "vesting",
    "staked_at",
    "contract_version"
  ],
  "properties": {
    "stake_id": {
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
      "type": "string"
    },
    "staker_id": {
      "minLength": 1,
      "type": "string"
    },
    "target_id": {
      "minLength": 1,
      "type": "string"
    },
    "amount_micro": {
      "pattern": "^[0-9]+$",
      "description": "Unsigned micro-USD amount as string (1 USD = 1,000,000 micro-USD)",
      "type": "string"
    },
    "stake_type": {
      "anyOf": [
        {
          "const": "conviction",
          "type": "string"
        },
        {
          "const": "delegation",
          "type": "string"
        },
        {
          "const": "validation",
          "type": "string"
        }
      ]
    },
    "vesting": {
      "additionalProperties": false,
      "type": "object",
      "required": [
        "schedule",
        "vested_micro",
        "remaining_micro"
      ],
      "properties": {
        "schedule": {
          "anyOf": [
            {
              "const": "immediate",
              "type": "string"
            },
            {
              "const": "performance_gated",
              "type": "string"
            },
            {
              "const": "time_gated",
              "type": "string"
            }
          ]
        },
        "vested_micro": {
          "pattern": "^[0-9]+$",
          "description": "Unsigned micro-USD amount as string (1 USD = 1,000,000 micro-USD)",
          "type": "string"
        },
        "remaining_micro": {
          "pattern": "^[0-9]+$",
          "description": "Unsigned micro-USD amount as string (1 USD = 1,000,000 micro-USD)",
          "type": "string"
        }
      }
    },
    "staked_at": {
      "format": "date-time",
      "type": "string"
    },
    "contract_version": {
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "type": "string"
    }
  }
}
