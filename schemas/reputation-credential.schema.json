{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/8.3.0/reputation-credential",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "credential_id",
    "personality_id",
    "source_collection_id",
    "source_pool_id",
    "source_state",
    "source_blended_score",
    "source_sample_count",
    "source_collection_score",
    "issued_at",
    "contract_version"
  ],
  "properties": {
    "credential_id": {
      "minLength": 1,
      "type": "string"
    },
    "personality_id": {
      "minLength": 1,
      "type": "string"
    },
    "source_collection_id": {
      "minLength": 1,
      "type": "string"
    },
    "source_pool_id": {
      "minLength": 1,
      "type": "string"
    },
    "source_state": {
      "$id": "ReputationState",
      "anyOf": [
        {
          "const": "cold",
          "type": "string"
        },
        {
          "const": "warming",
          "type": "string"
        },
        {
          "const": "established",
          "type": "string"
        },
        {
          "const": "authoritative",
          "type": "string"
        }
      ]
    },
    "source_blended_score": {
      "minimum": 0,
      "maximum": 1,
      "type": "number"
    },
    "source_sample_count": {
      "minimum": 0,
      "type": "integer"
    },
    "source_collection_score": {
      "minimum": 0,
      "maximum": 1,
      "description": "Collection score of the issuing collection at issuance time. Higher source collection scores indicate more trustworthy credentials â€” analogous to CA reputation in the TLS trust model.",
      "type": "number"
    },
    "issued_at": {
      "format": "date-time",
      "type": "string"
    },
    "expires_at": {
      "format": "date-time",
      "type": "string"
    },
    "attestation_hash": {
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of the underlying AggregateSnapshot. Enables verification without the full snapshot.",
      "type": "string"
    },
    "contract_version": {
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "type": "string"
    }
  },
  "$comment": "contract_version=8.3.0, min_supported=6.0.0"
}
