{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/8.2.0/commons/transition",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "from",
    "to"
  ],
  "properties": {
    "from": {
      "minLength": 1,
      "type": "string"
    },
    "to": {
      "minLength": 1,
      "type": "string"
    },
    "event": {
      "pattern": "^[a-z]+\\.[a-z_]+\\.[a-z_]+$",
      "description": "Event that triggers this transition.",
      "type": "string"
    },
    "guard": {
      "description": "Constraint DSL expression that must be true for transition to fire.",
      "type": "string"
    }
  },
  "$comment": "contract_version=8.2.0, min_supported=6.0.0"
}
