{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/8.1.0/basket-composition-entry",
  "additionalProperties": false,
  "description": "A single model entry in a basket composition snapshot.",
  "type": "object",
  "required": [
    "model_id",
    "weight",
    "quality_yield",
    "sample_count"
  ],
  "properties": {
    "model_id": {
      "minLength": 1,
      "description": "Model identifier in the basket.",
      "type": "string"
    },
    "weight": {
      "minimum": 0,
      "maximum": 1,
      "description": "Share of routing allocation (0-1).",
      "type": "number"
    },
    "quality_yield": {
      "minimum": 0,
      "maximum": 1,
      "description": "Observed quality yield at time of composition.",
      "type": "number"
    },
    "sample_count": {
      "minimum": 0,
      "description": "Number of observations backing this entry.",
      "type": "integer"
    }
  },
  "$comment": "contract_version=8.1.0, min_supported=6.0.0"
}
