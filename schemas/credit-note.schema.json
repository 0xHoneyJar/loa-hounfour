{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/7.5.0/credit-note",
  "additionalProperties": false,
  "description": "Billing reversal/refund referencing an original BillingEntry",
  "$comment": "contract_version=7.5.0, min_supported=6.0.0. Invariants (service-layer, not schema-enforced): (1) amount_micro <= referenced BillingEntry.total_cost_micro (no over-credit). (2) references_billing_entry must reference a valid, existing BillingEntry.id. (3) Sum of all CreditNote.amount_micro for a single entry <= that entry total_cost_micro. (4) At most one void-type CreditNote per BillingEntry (reason=refund with full amount).",
  "type": "object",
  "required": [
    "id",
    "references_billing_entry",
    "reason",
    "amount_micro",
    "recipients",
    "issued_at",
    "contract_version"
  ],
  "properties": {
    "id": {
      "minLength": 1,
      "description": "ULID",
      "type": "string"
    },
    "references_billing_entry": {
      "minLength": 1,
      "description": "BillingEntry.id this note references (must exist in billing store)",
      "type": "string"
    },
    "reason": {
      "anyOf": [
        {
          "const": "refund",
          "type": "string"
        },
        {
          "const": "dispute",
          "type": "string"
        },
        {
          "const": "partial_failure",
          "type": "string"
        },
        {
          "const": "adjustment",
          "type": "string"
        }
      ]
    },
    "amount_micro": {
      "allOf": [
        {
          "pattern": "^-?[0-9]+$",
          "description": "Micro-USD amount as string, signed (1 USD = 1,000,000 micro-USD). Negative values represent credits/refunds.",
          "type": "string"
        },
        {
          "description": "Credit amount in micro-USD (must not exceed referenced entry total)",
          "type": "string"
        }
      ]
    },
    "recipients": {
      "minItems": 1,
      "type": "array",
      "items": {
        "$id": "BillingRecipient",
        "additionalProperties": false,
        "type": "object",
        "required": [
          "address",
          "role",
          "share_bps",
          "amount_micro"
        ],
        "properties": {
          "address": {
            "minLength": 1,
            "description": "Wallet or account address",
            "type": "string"
          },
          "role": {
            "anyOf": [
              {
                "const": "provider",
                "type": "string"
              },
              {
                "const": "platform",
                "type": "string"
              },
              {
                "const": "producer",
                "type": "string"
              },
              {
                "const": "agent_tba",
                "type": "string"
              },
              {
                "const": "agent_performer",
                "type": "string"
              },
              {
                "const": "commons",
                "type": "string"
              }
            ]
          },
          "share_bps": {
            "minimum": 0,
            "maximum": 10000,
            "description": "Basis points share (0-10000)",
            "type": "integer"
          },
          "amount_micro": {
            "pattern": "^-?[0-9]+$",
            "description": "Micro-USD amount as string, signed (1 USD = 1,000,000 micro-USD). Negative values represent credits/refunds.",
            "type": "string"
          }
        }
      }
    },
    "issued_at": {
      "format": "date-time",
      "type": "string"
    },
    "contract_version": {
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "type": "string"
    }
  }
}
