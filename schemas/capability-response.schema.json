{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/7.10.1/capability-response",
  "additionalProperties": false,
  "description": "Response to a capability query",
  "type": "object",
  "required": [
    "agent_id",
    "capabilities",
    "available",
    "contract_version"
  ],
  "properties": {
    "agent_id": {
      "minLength": 1,
      "description": "Agent providing these capabilities",
      "type": "string"
    },
    "capabilities": {
      "description": "List of capabilities this agent provides",
      "type": "array",
      "items": {
        "$id": "Capability",
        "additionalProperties": false,
        "description": "A single capability an agent can provide",
        "type": "object",
        "required": [
          "skill_id"
        ],
        "properties": {
          "skill_id": {
            "minLength": 1,
            "description": "Skill or capability identifier",
            "type": "string"
          },
          "description": {
            "description": "Human-readable capability description",
            "type": "string"
          },
          "input_modes": {
            "description": "Accepted input types (e.g. \"text\", \"image\", \"audio\")",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "output_modes": {
            "description": "Produced output types (e.g. \"text\", \"code\", \"image\")",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "models": {
            "description": "Model IDs that can execute this capability",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "max_latency_ms": {
            "minimum": 0,
            "description": "Maximum acceptable latency in milliseconds",
            "type": "integer"
          }
        }
      }
    },
    "available": {
      "description": "Whether the agent can currently accept work",
      "type": "boolean"
    },
    "contract_version": {
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Protocol version this agent supports",
      "type": "string"
    },
    "responded_at": {
      "format": "date-time",
      "description": "When the response was generated (for cache freshness)",
      "type": "string"
    }
  },
  "$comment": "contract_version=7.10.1, min_supported=6.0.0"
}
