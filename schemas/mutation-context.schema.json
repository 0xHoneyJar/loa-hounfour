{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/8.3.0/mutation-context",
  "additionalProperties": false,
  "description": "Context for a governed resource mutation â€” actor identity, type, and access policy. Generalized from freeside's CreditMutationContext (6-witness pattern).",
  "type": "object",
  "required": [
    "actor_id",
    "actor_type"
  ],
  "properties": {
    "actor_id": {
      "minLength": 1,
      "type": "string"
    },
    "actor_type": {
      "anyOf": [
        {
          "const": "human",
          "type": "string"
        },
        {
          "const": "system",
          "type": "string"
        },
        {
          "const": "autonomous",
          "type": "string"
        }
      ]
    },
    "access_policy": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "required_reputation_state": {
          "type": "string"
        },
        "required_role": {
          "type": "string"
        },
        "min_reputation_score": {
          "minimum": 0,
          "maximum": 1,
          "type": "number"
        }
      }
    }
  },
  "$comment": "contract_version=8.3.0, min_supported=6.0.0"
}
