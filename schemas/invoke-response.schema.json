{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "InvokeResponse",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "id",
    "model",
    "provider",
    "pool_id",
    "content",
    "usage",
    "cost",
    "billing_method",
    "latency_ms",
    "contract_version"
  ],
  "properties": {
    "id": {
      "description": "Request trace ID",
      "type": "string"
    },
    "model": {
      "description": "Model that served the request",
      "type": "string"
    },
    "provider": {
      "description": "Provider that served the request",
      "type": "string"
    },
    "pool_id": {
      "description": "Pool the request was routed to",
      "type": "string"
    },
    "content": {
      "description": "Model response content",
      "type": "string"
    },
    "tool_calls": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "function"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "function": {
            "type": "object",
            "required": [
              "name",
              "arguments"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "arguments": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "usage": {
      "$id": "Usage",
      "type": "object",
      "required": [
        "prompt_tokens",
        "completion_tokens"
      ],
      "properties": {
        "prompt_tokens": {
          "minimum": 0,
          "type": "integer"
        },
        "completion_tokens": {
          "minimum": 0,
          "type": "integer"
        },
        "reasoning_tokens": {
          "minimum": 0,
          "type": "integer"
        }
      }
    },
    "cost": {
      "$id": "CostBreakdown",
      "type": "object",
      "required": [
        "input_cost_micro",
        "output_cost_micro",
        "total_cost_micro"
      ],
      "properties": {
        "input_cost_micro": {
          "pattern": "^[0-9]+$",
          "description": "Micro-USD amount as string (1 USD = 1,000,000 micro-USD)",
          "type": "string"
        },
        "output_cost_micro": {
          "pattern": "^[0-9]+$",
          "description": "Micro-USD amount as string (1 USD = 1,000,000 micro-USD)",
          "type": "string"
        },
        "reasoning_cost_micro": {
          "pattern": "^[0-9]+$",
          "description": "Micro-USD amount as string (1 USD = 1,000,000 micro-USD)",
          "type": "string"
        },
        "total_cost_micro": {
          "pattern": "^[0-9]+$",
          "description": "Micro-USD amount as string (1 USD = 1,000,000 micro-USD)",
          "type": "string"
        }
      }
    },
    "billing_method": {
      "description": "How cost was determined",
      "anyOf": [
        {
          "const": "provider_reported",
          "type": "string"
        },
        {
          "const": "observed_chunks_overcount",
          "type": "string"
        },
        {
          "const": "prompt_only",
          "type": "string"
        }
      ]
    },
    "latency_ms": {
      "minimum": 0,
      "type": "integer"
    },
    "contract_version": {
      "description": "Protocol version",
      "type": "string"
    }
  }
}
