{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/8.1.0/invoke-response",
  "description": "Response from an AI agent invocation with billing reference",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "id",
    "model",
    "provider",
    "pool_id",
    "content",
    "usage",
    "billing_entry_id",
    "billing_method",
    "latency_ms",
    "contract_version"
  ],
  "properties": {
    "id": {
      "description": "Request trace ID",
      "type": "string"
    },
    "model": {
      "description": "Model that served the request",
      "type": "string"
    },
    "provider": {
      "description": "Provider that served the request",
      "type": "string"
    },
    "pool_id": {
      "description": "Pool the request was routed to",
      "type": "string"
    },
    "content": {
      "description": "Model response content",
      "type": "string"
    },
    "tool_calls": {
      "type": "array",
      "items": {
        "additionalProperties": false,
        "type": "object",
        "required": [
          "id",
          "function"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "function": {
            "additionalProperties": false,
            "type": "object",
            "required": [
              "name",
              "arguments"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "arguments": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "usage": {
      "$id": "Usage",
      "additionalProperties": false,
      "type": "object",
      "required": [
        "prompt_tokens",
        "completion_tokens"
      ],
      "properties": {
        "prompt_tokens": {
          "minimum": 0,
          "type": "integer"
        },
        "completion_tokens": {
          "minimum": 0,
          "type": "integer"
        },
        "reasoning_tokens": {
          "minimum": 0,
          "type": "integer"
        }
      }
    },
    "billing_entry_id": {
      "minLength": 1,
      "description": "References BillingEntry.id (ULID)",
      "type": "string"
    },
    "billing_method": {
      "description": "How cost was determined",
      "anyOf": [
        {
          "const": "provider_reported",
          "type": "string"
        },
        {
          "const": "observed_chunks_overcount",
          "type": "string"
        },
        {
          "const": "prompt_only",
          "type": "string"
        }
      ]
    },
    "latency_ms": {
      "minimum": 0,
      "type": "integer"
    },
    "contract_version": {
      "description": "Protocol version",
      "type": "string"
    },
    "metadata": {
      "description": "Consumer-extensible metadata. Namespace conventions: loa.* reserved for protocol-level metadata, trace.* for OpenTelemetry-compatible observability, x-* for consumer-defined extensions. Not validated by protocol contract.",
      "type": "object",
      "patternProperties": {
        "^(.*)$": {}
      }
    }
  },
  "$comment": "contract_version=8.1.0, min_supported=6.0.0"
}
