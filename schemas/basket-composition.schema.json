{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/8.0.0/basket-composition",
  "additionalProperties": false,
  "description": "Point-in-time snapshot of the SDR basket â€” the weight distribution across models at a moment in time.",
  "type": "object",
  "required": [
    "composition_id",
    "entries",
    "total_models",
    "computed_at",
    "contract_version"
  ],
  "properties": {
    "composition_id": {
      "format": "uuid",
      "description": "Unique identifier for this composition snapshot.",
      "type": "string"
    },
    "entries": {
      "minItems": 1,
      "description": "Model entries in the basket.",
      "type": "array",
      "items": {
        "$id": "BasketCompositionEntry",
        "additionalProperties": false,
        "description": "A single model entry in a basket composition snapshot.",
        "type": "object",
        "required": [
          "model_id",
          "weight",
          "quality_yield",
          "sample_count"
        ],
        "properties": {
          "model_id": {
            "minLength": 1,
            "description": "Model identifier in the basket.",
            "type": "string"
          },
          "weight": {
            "minimum": 0,
            "maximum": 1,
            "description": "Share of routing allocation (0-1).",
            "type": "number"
          },
          "quality_yield": {
            "minimum": 0,
            "maximum": 1,
            "description": "Observed quality yield at time of composition.",
            "type": "number"
          },
          "sample_count": {
            "minimum": 0,
            "description": "Number of observations backing this entry.",
            "type": "integer"
          }
        }
      }
    },
    "total_models": {
      "minimum": 1,
      "description": "Number of models in the basket.",
      "type": "integer"
    },
    "computed_at": {
      "format": "date-time",
      "description": "When this composition was computed.",
      "type": "string"
    },
    "contract_version": {
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Protocol version.",
      "type": "string"
    }
  },
  "$comment": "contract_version=8.0.0, min_supported=6.0.0"
}
