{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/7.9.1/usage-report",
  "description": "Token usage report for billing and rate limiting",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "trace_id",
    "tenant_id",
    "provider",
    "model",
    "pool_id",
    "usage",
    "billing_entry_id",
    "billing_method",
    "idempotency_key",
    "timestamp",
    "contract_version"
  ],
  "properties": {
    "trace_id": {
      "type": "string"
    },
    "tenant_id": {
      "type": "string"
    },
    "provider": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "pool_id": {
      "type": "string"
    },
    "usage": {
      "$id": "Usage",
      "additionalProperties": false,
      "type": "object",
      "required": [
        "prompt_tokens",
        "completion_tokens"
      ],
      "properties": {
        "prompt_tokens": {
          "minimum": 0,
          "type": "integer"
        },
        "completion_tokens": {
          "minimum": 0,
          "type": "integer"
        },
        "reasoning_tokens": {
          "minimum": 0,
          "type": "integer"
        }
      }
    },
    "billing_entry_id": {
      "minLength": 1,
      "description": "References BillingEntry.id (ULID)",
      "type": "string"
    },
    "billing_method": {
      "anyOf": [
        {
          "const": "provider_reported",
          "type": "string"
        },
        {
          "const": "observed_chunks_overcount",
          "type": "string"
        },
        {
          "const": "prompt_only",
          "type": "string"
        }
      ]
    },
    "idempotency_key": {
      "description": "Derived via deriveIdempotencyKey()",
      "type": "string"
    },
    "timestamp": {
      "format": "date-time",
      "type": "string"
    },
    "contract_version": {
      "type": "string"
    },
    "nft_id": {
      "type": "string"
    },
    "ensemble_id": {
      "type": "string"
    }
  },
  "$comment": "contract_version=7.9.1, min_supported=6.0.0"
}
