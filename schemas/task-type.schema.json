{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/8.0.0/task-type",
  "description": "Task categories for reputation scoring. Protocol types are literals; community types use namespace:type format.",
  "anyOf": [
    {
      "const": "code_review",
      "type": "string"
    },
    {
      "const": "creative_writing",
      "type": "string"
    },
    {
      "const": "analysis",
      "type": "string"
    },
    {
      "const": "summarization",
      "type": "string"
    },
    {
      "const": "general",
      "type": "string"
    },
    {
      "pattern": "^[a-z][a-z0-9_-]+:[a-z][a-z0-9_]+$",
      "description": "Community-defined task type in namespace:type format (e.g., legal-guild:contract_review).",
      "type": "string"
    }
  ],
  "$comment": "contract_version=8.0.0, min_supported=6.0.0"
}
