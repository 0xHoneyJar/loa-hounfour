{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/7.5.0/delegation-chain",
  "additionalProperties": false,
  "x-cross-field-validated": true,
  "description": "Authority delegation chain with depth limits and conservation invariants.",
  "type": "object",
  "required": [
    "chain_id",
    "root_delegator",
    "links",
    "max_depth",
    "authority_conservation",
    "status",
    "contract_version"
  ],
  "properties": {
    "chain_id": {
      "format": "uuid",
      "type": "string"
    },
    "root_delegator": {
      "minLength": 1,
      "description": "Original authority source",
      "type": "string"
    },
    "links": {
      "minItems": 1,
      "maxItems": 10,
      "description": "Ordered delegation chain, from root outward",
      "type": "array",
      "items": {
        "additionalProperties": false,
        "type": "object",
        "required": [
          "delegator",
          "delegatee",
          "task_type",
          "authority_scope",
          "timestamp",
          "outcome"
        ],
        "properties": {
          "delegator": {
            "minLength": 1,
            "description": "Agent or system delegating authority",
            "type": "string"
          },
          "delegatee": {
            "minLength": 1,
            "description": "Agent receiving the delegation",
            "type": "string"
          },
          "task_type": {
            "minLength": 1,
            "description": "Kind of work (inference, review, transfer)",
            "type": "string"
          },
          "authority_scope": {
            "minItems": 1,
            "description": "Permissions transferred (budget_spend, model_select, etc.)",
            "type": "array",
            "items": {
              "minLength": 1,
              "type": "string"
            }
          },
          "budget_allocated_micro": {
            "pattern": "^[0-9]+$",
            "description": "Unsigned micro-USD amount as string (1 USD = 1,000,000 micro-USD)",
            "type": "string"
          },
          "timestamp": {
            "format": "date-time",
            "type": "string"
          },
          "outcome": {
            "anyOf": [
              {
                "const": "pending",
                "type": "string"
              },
              {
                "const": "completed",
                "type": "string"
              },
              {
                "const": "failed",
                "type": "string"
              },
              {
                "const": "re-delegated",
                "type": "string"
              }
            ]
          },
          "outcome_timestamp": {
            "format": "date-time",
            "type": "string"
          }
        }
      }
    },
    "max_depth": {
      "minimum": 1,
      "maximum": 10,
      "description": "Protocol-enforced depth limit",
      "type": "integer"
    },
    "authority_conservation": {
      "description": "Whether total authority is conserved (no link grants more than it received)",
      "type": "boolean"
    },
    "status": {
      "anyOf": [
        {
          "const": "active",
          "type": "string"
        },
        {
          "const": "completed",
          "type": "string"
        },
        {
          "const": "failed",
          "type": "string"
        },
        {
          "const": "revoked",
          "type": "string"
        }
      ]
    },
    "revocation_policy": {
      "description": "FL-PRD-001: Whether revoking a link invalidates all downstream links",
      "anyOf": [
        {
          "const": "cascade",
          "type": "string"
        },
        {
          "const": "non_cascade",
          "type": "string"
        }
      ]
    },
    "contract_version": {
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "type": "string"
    }
  },
  "$comment": "contract_version=7.5.0, min_supported=6.0.0"
}
