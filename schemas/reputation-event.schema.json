          "type": "string"
        },
        "sequence": {
          "minimum": 0,
          "description": "Optional total ordering sequence number.",
          "type": "integer"
        },
        "type": {
          "const": "task_completed",
          "type": "string"
        },
        "task_type": {
          "$id": "TaskType",
          "description": "Task categories for reputation scoring. Protocol types are literals; community types use namespace:type format.",
          "anyOf": [
            {
              "const": "code_review",
              "type": "string"
            },
            {
              "const": "creative_writing",
              "type": "string"
            },
            {
              "const": "analysis",
              "type": "string"
            },
            {
              "const": "summarization",
              "type": "string"
            },
            {
              "const": "general",
              "type": "string"
            },
            {
              "pattern": "^[a-z][a-z0-9_-]+:[a-z][a-z0-9_]+$",
              "description": "Community-defined task type in namespace:type format (e.g., legal-guild:contract_review).",
              "type": "string"
            }
          ]
        },
        "success": {
          "description": "Whether the task completed successfully.",
          "type": "boolean"
        },
        "duration_ms": {
          "minimum": 0,
          "maximum": 3600000,
          "description": "Task duration in milliseconds (max 1 hour).",
          "type": "integer"
        }
      }
    },
    {
      "additionalProperties": false,
