            "score"
          ],
          "properties": {
            "score": {
              "minimum": 0,
              "maximum": 1,
              "description": "Overall quality score in [0, 1].",
              "type": "number"
            },
            "dimensions": {
              "maxProperties": 20,
              "additionalProperties": false,
              "description": "Named quality dimensions (e.g., coherence, safety). Same pattern constraint as quality_signal dimensions.",
              "type": "object",
              "patternProperties": {
                "^[a-z][a-z0-9_]{0,31}$": {
                  "minimum": 0,
                  "maximum": 1,
                  "type": "number"
                }
              }
            },
            "latency_ms": {
              "minimum": 0,
              "description": "End-to-end latency of the evaluated request in milliseconds.",
              "type": "integer"
            },
            "evaluated_by": {
              "minLength": 1,
              "description": "Agent or system that performed the quality evaluation.",
              "type": "string"
            }
          }
        },
        "request_context": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "request_id": {
              "format": "uuid",
              "description": "Originating inference request ID.",
              "type": "string"
            },
            "delegation_id": {
              "format": "uuid",
              "description": "Delegation chain context, if any.",
              "type": "string"
            }
          }
        }
      }
    }
