          "type": "string"
        },
        "provider": {
          "minLength": 1,
          "maxLength": 255,
          "description": "Provider identifier (e.g., \"openai\", \"anthropic\").",
          "type": "string"
        },
        "pool_id": {
          "minLength": 1,
