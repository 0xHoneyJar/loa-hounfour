{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/7.10.1/reputation-event",
  "description": "Discriminated union of reputation event variants. Discriminator: type.",
  "anyOf": [
    {
      "additionalProperties": false,
      "type": "object",
      "required": [
        "event_id",
        "agent_id",
        "collection_id",
        "timestamp",
        "type",
        "score"
      ],
      "properties": {
        "event_id": {
          "format": "uuid",
          "description": "Globally unique event identifier for deduplication.",
          "type": "string"
        },
        "agent_id": {
          "maxLength": 255,
          "minLength": 1,
          "description": "Agent that produced this event.",
          "type": "string"
        },
        "collection_id": {
          "maxLength": 255,
          "minLength": 1,
          "description": "Collection context for the event.",
          "type": "string"
        },
        "timestamp": {
          "format": "date-time",
          "description": "When the event occurred.",
          "type": "string"
        },
        "sequence": {
          "minimum": 0,
          "description": "Optional total ordering sequence number.",
          "type": "integer"
        },
        "type": {
          "const": "quality_signal",
          "type": "string"
        },
        "score": {
          "minimum": 0,
          "maximum": 1,
          "description": "Quality score in [0, 1].",
          "type": "number"
        },
        "task_type": {
          "$id": "TaskType",
          "description": "Closed taxonomy of task categories for task-dimensional reputation scoring.",
          "anyOf": [
            {
              "const": "code_review",
              "type": "string"
            },
            {
              "const": "creative_writing",
              "type": "string"
            },
            {
              "const": "analysis",
              "type": "string"
            },
            {
              "const": "summarization",
              "type": "string"
            },
            {
              "const": "general",
              "type": "string"
            }
          ]
        },
        "dimensions": {
          "maxProperties": 20,
          "description": "Named quality dimensions (e.g., coherence, safety).",
          "type": "object",
          "patternProperties": {
            "^[a-z][a-z0-9_]{0,31}$": {
              "minimum": 0,
              "maximum": 1,
              "type": "number"
            }
          }
        }
      }
    },
    {
      "additionalProperties": false,
      "type": "object",
      "required": [
        "event_id",
        "agent_id",
        "collection_id",
        "timestamp",
        "type",
        "task_type",
        "success"
      ],
      "properties": {
        "event_id": {
          "format": "uuid",
          "description": "Globally unique event identifier for deduplication.",
          "type": "string"
        },
        "agent_id": {
          "maxLength": 255,
          "minLength": 1,
          "description": "Agent that produced this event.",
          "type": "string"
        },
        "collection_id": {
          "maxLength": 255,
          "minLength": 1,
          "description": "Collection context for the event.",
          "type": "string"
        },
        "timestamp": {
          "format": "date-time",
          "description": "When the event occurred.",
          "type": "string"
        },
        "sequence": {
          "minimum": 0,
          "description": "Optional total ordering sequence number.",
          "type": "integer"
        },
        "type": {
          "const": "task_completed",
          "type": "string"
        },
        "task_type": {
          "$id": "TaskType",
          "description": "Closed taxonomy of task categories for task-dimensional reputation scoring.",
          "anyOf": [
            {
              "const": "code_review",
              "type": "string"
            },
            {
              "const": "creative_writing",
              "type": "string"
            },
            {
              "const": "analysis",
              "type": "string"
            },
            {
              "const": "summarization",
              "type": "string"
            },
            {
              "const": "general",
              "type": "string"
            }
          ]
        },
        "success": {
          "description": "Whether the task completed successfully.",
          "type": "boolean"
        },
        "duration_ms": {
          "minimum": 0,
          "maximum": 3600000,
          "description": "Task duration in milliseconds (max 1 hour).",
          "type": "integer"
        }
      }
    },
    {
      "additionalProperties": false,
      "type": "object",
      "required": [
        "event_id",
        "agent_id",
        "collection_id",
        "timestamp",
        "type",
        "credential_id",
        "action"
      ],
      "properties": {
        "event_id": {
          "format": "uuid",
          "description": "Globally unique event identifier for deduplication.",
          "type": "string"
        },
        "agent_id": {
          "maxLength": 255,
          "minLength": 1,
          "description": "Agent that produced this event.",
          "type": "string"
        },
        "collection_id": {
          "maxLength": 255,
          "minLength": 1,
          "description": "Collection context for the event.",
          "type": "string"
        },
        "timestamp": {
          "format": "date-time",
          "description": "When the event occurred.",
          "type": "string"
        },
        "sequence": {
          "minimum": 0,
          "description": "Optional total ordering sequence number.",
          "type": "integer"
        },
        "type": {
          "const": "credential_update",
          "type": "string"
        },
        "credential_id": {
          "format": "uuid",
          "description": "Credential being updated.",
          "type": "string"
        },
        "action": {
          "description": "What happened to the credential.",
          "anyOf": [
            {
              "const": "issued",
              "type": "string"
            },
            {
              "const": "revoked",
              "type": "string"
            },
            {
              "const": "renewed",
              "type": "string"
            },
            {
              "const": "suspended",
              "type": "string"
            }
          ]
        }
      }
    }
  ],
  "$comment": "contract_version=7.10.1, min_supported=6.0.0"
}
