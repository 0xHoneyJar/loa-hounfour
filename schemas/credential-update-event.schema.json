{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "event_id",
    "agent_id",
    "collection_id",
    "timestamp",
    "type",
    "credential_id",
    "action"
  ],
  "properties": {
    "event_id": {
      "format": "uuid",
      "description": "Globally unique event identifier for deduplication.",
      "type": "string"
    },
    "agent_id": {
      "maxLength": 255,
      "minLength": 1,
      "description": "Agent that produced this event.",
      "type": "string"
    },
    "collection_id": {
      "maxLength": 255,
      "minLength": 1,
      "description": "Collection context for the event.",
      "type": "string"
    },
    "timestamp": {
      "format": "date-time",
      "description": "When the event occurred.",
      "type": "string"
    },
    "sequence": {
      "minimum": 0,
      "description": "Optional total ordering sequence number.",
      "type": "integer"
    },
    "type": {
      "const": "credential_update",
      "type": "string"
    },
    "credential_id": {
      "format": "uuid",
      "description": "Credential being updated.",
      "type": "string"
    },
    "action": {
      "description": "What happened to the credential.",
      "anyOf": [
        {
          "const": "issued",
          "type": "string"
        },
        {
          "const": "revoked",
          "type": "string"
        },
        {
          "const": "renewed",
          "type": "string"
        },
        {
          "const": "suspended",
          "type": "string"
        }
      ]
    }
  },
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/8.0.0/credential-update-event",
  "$comment": "contract_version=8.0.0, min_supported=6.0.0"
}
