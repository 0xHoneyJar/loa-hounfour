{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.0xhoneyjar.com/loa-hounfour/8.1.0/capability-query",
  "additionalProperties": true,
  "description": "Query to discover agents with specific capabilities",
  "type": "object",
  "properties": {
    "required_skills": {
      "description": "Skills the agent must provide",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "preferred_models": {
      "description": "Preferred model IDs (best-effort matching)",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "max_latency_ms": {
      "minimum": 0,
      "description": "Maximum acceptable response latency",
      "type": "integer"
    },
    "min_context_tokens": {
      "minimum": 0,
      "description": "Minimum context window size in tokens",
      "type": "integer"
    }
  },
  "$comment": "contract_version=8.1.0, min_supported=6.0.0"
}
